%
% An environment for backup slides
%
\providetranslation[to=russian]{Backup slides}{Дополнительные материалы}
\newenvironment{backupslides}{%
  \appendix
  \newcounter{finalframe}
  \setcounter{finalframe}{\value{framenumber}}

  \section*{\translate{Backup slides}}
  \begin{frame}[label=backup]
    \begin{center}
      {\Huge \translate{Backup slides}\dots}
    \end{center}
  \end{frame}
}{%
  \setcounter{framenumber}{\value{finalframe}}
}

