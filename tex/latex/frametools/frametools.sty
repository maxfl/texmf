%
% Define frame but print only after the command used
%
\newcommand{\callableframe}[3][]{%
  \ifstrequal{#1}{}{%
    \newcommand<>{#2}{%
      \begin{frame}##1
        #3
      \end{frame}%
    }
    }{%
    \newcommand<>{#2}{%
      \begin{frame}##1[#1]
        #3
      \end{frame}%
    }
  }%
}

\newcommand{\callableframepre}[4][]{%
  \ifstrequal{#1}{}{%
    \newcommand<>{#2}{%
      \begingroup
      #4
      \begin{frame}##1
        #3
      \end{frame}%
      \endgroup
    }
    }{%
    \newcommand<>{#2}{%
      \begingroup
      #4
      \begin{frame}##1[#1]
        #3
      \end{frame}%
      \endgroup
    }
  }%
}

%
% Change margin
%
\newenvironment{changemargin}[2]{%
  \begin{list}{}{%
    \setlength{\topsep}{0pt}%
    \setlength{\leftmargin}{#1}%
    \setlength{\rightmargin}{#2}%
    \setlength{\listparindent}{\parindent}%
    \setlength{\itemindent}{\parindent}%
    \setlength{\parsep}{\parskip}%
  }%
  \item[]}{\end{list}
}

%
% A text in bottom right corner of the slide
%
\newcommand<>\FrameText[2][0.98\textheight]{%
  \uncover#3{%
    \begin{textblock*}{\paperwidth}(0pt,#1)
      \raggedleft #2\hspace{.5em}
    \end{textblock*}%
  }%
}

