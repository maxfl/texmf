\ProvidesPackage{siunitx-rus}
\RequirePackage{siunitx}
\RequirePackage{translator}

\usedictionary{siunitx-translated}

\sisetup{
  list-final-separator = { \text{\translate{si_and}} },
  list-pair-separator= { \text{\translate{si_and}} },
  range-phrase= { \text{\translate{to (numerical range)}} },
}

\DeclareSIPrefix \nano  {\text{\translate{n}}}{-9}
\DeclareSIPrefix \micro {\text{\translate{micro}}}{-6}
\DeclareSIPrefix \milli {\text{\translate{m}}}{-3}
\DeclareSIPrefix \centi {\text{\translate{c}}}{-2}
\DeclareSIPrefix \kilo  {\text{\translate{k}}}{3}
\DeclareSIPrefix \mega  {\text{\translate{M}}}{6}
\DeclareSIPrefix \giga  {\text{\translate{G}}}{9}

\DeclareSIUnit \second   {\text{\translate{s}}}
\DeclareSIUnit \metre    {\text{\translate{m}}}
\DeclareSIUnit \gram     {\text{\translate{g}}}
\DeclareSIUnit \tonne    {\text{\translate{t}}}
\DeclareSIUnit \electronvolt {\text{\translate{eV}}}
\DeclareSIUnit \barn     {\text{\translate{barn}}}
\DeclareSIUnit \watt     {\text{\translate{W}}}
\DeclareSIUnit \mwe      {\text{\translate{m.w.e.}}}
\DeclareSIUnit \litre    {\text{\translate{l}}}
\DeclareSIUnit \liter    {\text{\translate{l}}}

\DeclareSIUnit \becquerel{\text{\translate{Bq}}}
\DeclareSIUnit \Bq  {        \becquerel }
\DeclareSIUnit \kBq { \kilo  \becquerel }
\DeclareSIUnit \MBq { \mega  \becquerel }
\DeclareSIUnit \GBq { \giga  \becquerel }
\DeclareSIUnit \TBq { \tera  \becquerel }

\DeclareSIUnit \hertz {\text{\translate{Hz}}}

\DeclareSIUnit \ubarn     {\micro\barn}
\DeclareSIUnit \mbarn     {\milli\barn}
\DeclareSIUnit \kbarn     {\kilo\barn}
\DeclareSIUnit \Mbarn     {\mega\barn}

\DeclareSIUnit \pe        {p.e.}

\endinput
