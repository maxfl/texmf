\sisetup{
  list-final-separator = { \translate{and} },
  list-pair-separator= { \translate{and} },
  range-phrase= { \translate{to (numerical range)} },
}

\DeclareSIPrefix \nano  {\translate{n}}{-9}
\DeclareSIPrefix \micro {\translate{micro}}{-6}
\DeclareSIPrefix \milli {\translate{m}}{-3}
\DeclareSIPrefix \centi {\translate{c}}{-2}
\DeclareSIPrefix \kilo  {\translate{k}}{3}
\DeclareSIPrefix \mega  {\translate{M}}{6}
\DeclareSIPrefix \giga  {\translate{G}}{9}

\DeclareSIUnit \second   {\translate{s}}
\DeclareSIUnit \metre    {\translate{m}}
\DeclareSIUnit \gram     {\translate{g}}
\DeclareSIUnit \tonne    {\translate{t}}
\DeclareSIUnit \electronvolt {\translate{eV}}
\DeclareSIUnit \barn     {\translate{barn}}
\DeclareSIUnit \watt     {\translate{W}}
\DeclareSIUnit \mwe      {\translate{m.w.e.}}
\DeclareSIUnit \litre    {\translate{l}}
\DeclareSIUnit \liter    {\translate{l}}

\DeclareSIUnit \ubarn     {\micro\barn}
\DeclareSIUnit \mbarn     {\milli\barn}
\DeclareSIUnit \kbarn     {\kilo\barn}
\DeclareSIUnit \Mbarn     {\mega\barn}

