\DeclareSIPrefix \nano  {\text{\translate{n}}}{-9}
\DeclareSIPrefix \micro {\text{\translate{micro}}}{-6}
\DeclareSIPrefix \milli {\text{\translate{m}}}{-3}
\DeclareSIPrefix \centi {\text{\translate{c}}}{-2}
\DeclareSIPrefix \kilo  {\text{\translate{k}}}{3}
\DeclareSIPrefix \mega  {\text{\translate{M}}}{6}
\DeclareSIPrefix \giga  {\text{\translate{G}}}{9}

\DeclareSIUnit \second   {\text{\translate{s}}}
\DeclareSIUnit \metre    {\text{\translate{m}}}
\DeclareSIUnit \gram     {\text{\translate{g}}}
\DeclareSIUnit \tonne    {\text{\translate{t}}}
\DeclareSIUnit \electronvolt {\text{\translate{eV}}}
\DeclareSIUnit \barn     {\text{\translate{barn}}}
