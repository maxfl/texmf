\RequirePackage{siunitx}
\RequirePackage{translator}

\newtranslation[to=russian]{and}{и}
\newtranslation[to=english]{barn}{b}
\newtranslation[to=russian]{barn}{бн}
\newtranslation[to=russian]{c}{с}
\newtranslation[to=russian]{g}{г}
\newtranslation[to=russian]{G}{Г}
\newtranslation[to=russian]{l}{л}
\newtranslation[to=russian]{L}{Л}
\newtranslation[to=russian]{m}{м}
\newtranslation[to=russian]{M}{М}
\newtranslation[to=russian]{m.w.e.}{м.в.э.}
\newtranslation[to=russian]{metre}{метр}
\newtranslation[to=english]{micro}{\ensuremath{\SIUnitSymbolMicro}}
\newtranslation[to=russian]{micro}{мк}
\newtranslation[to=russian]{n}{н}
\newtranslation[to=russian]{k}{к}
\newtranslation[to=russian]{s}{с}
